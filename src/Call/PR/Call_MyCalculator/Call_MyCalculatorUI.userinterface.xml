<UIDescription name="Call::MyCalculatorUI" schemaVersion="0.0.0.5">
  <Page pagePattern="SingleSectionDialogPage" onBackDiscard="true">
    <PageHeader>
      <Bindings>
        <Resource target="title" type="Label" id="CreateCalculationTitleId" defaultLabel="New Calculation" />
      </Bindings>
      <MenuItems>
        <MenuItem directlyVisible="true" itemId="Calculate">
          <Bindings>
            <Resource target="Text" type="Label" id="CalculateId" defaultLabel="Calculate" />
            <Resource target="Icon" type="Image" id="CalculatorDarkGrey24" />
            <Binding target="Editable" type="Editable" call="ProcessContext::CalculationWizardBO.myGetButtonVisibility">
              <Parameters>
                <Input name="token" type="Literal" value="btnCalculate" />
              </Parameters>
            </Binding>
          </Bindings>
          <Events>
            <ButtonPressedEvent event="calculateValue" />
          </Events>
        </MenuItem>
        <MenuItem directlyVisible="true" itemId="ClearCalculatorValues">
          <Bindings>
            <Resource target="Text" type="Label" id="ClearCalculatorValuesId" defaultLabel="Clear" />
            <Resource target="Icon" type="Image" id="CancelledDarkGrey24" defaultImage="CancelledDarkGrey24" />
          </Bindings>
          <Events>
            <ButtonPressedEvent event="clearCalculationValues">
              <Params>
                <Param name="buttonPressed" value="clearCalculationValues" />
              </Params>
            </ButtonPressedEvent>
          </Events>
        </MenuItem>
        <MenuItem directlyVisible="true" itemId="SaveCalculatorValues">
          <Bindings>
            <Resource target="Text" type="Label" id="SaveCalculatorValuesId" defaultLabel="Save and Generate PDF" />
            <Resource target="Icon" type="Image" id="CheckGrey24" defaultImage="CheckGrey24" />
            <Binding target="Editable" type="Editable" call="ProcessContext::CalculationWizardBO.myGetButtonVisibility">
              <Parameters>
                <Input name="token" type="Literal" value="btnSave" />
              </Parameters>
            </Binding>
          </Bindings>
          <Events>
            <ButtonPressedEvent event="saveCalculationValues">
              <Params>
                <Param name="buttonPressed" value="saveCalculationValues" />
              </Params>
            </ButtonPressedEvent>
          </Events>
        </MenuItem>
      </MenuItems>
    </PageHeader>
    <Section sectionName="masterSection" sectionPattern="SingleAreaSection">
      <Area areaName="mainArea" areaPattern="GroupedElementsArea">
        <!-- Calculation Type -->
        <GroupElement name="NewCustomerCalculation">
          <SelectionBox name="CalculationType">
            <Bindings>
              <Resource target="Label" type="Label" id="CalculationTypeId" defaultLabel="Calculation Type" />
              <Binding target="DataSource" binding="ProcessContext::CalculatorRecordTypes" bindingMode="TWO_WAY" />
              <Binding target="Value" binding="ProcessContext::CalculationWizardBO.recordTypeId" bindingMode="TWO_WAY" />
            </Bindings>
            <Items>
              <Bindings>
                <Binding target="ItemValue" type="Text" binding=".pKey" bindingMode="ONE_WAY" />
                <Binding target="ItemText" type="Text" binding=".text" bindingMode="ONE_WAY" />
              </Bindings>
            </Items>
            <Events>
              <ItemSelectedEvent event="calculationTypeSelected" />
            </Events>
          </SelectionBox>
        </GroupElement>
        <!-- Information Page -->
        <GroupElement name="InformationGroup">
          <Bindings>
            <Resource target="Title" type="Label" id="InformationId" defaultLabel="Information" />
          </Bindings>
          <SelectionBox name="TimeFrame">
            <Bindings>
              <Resource target="Label" type="Label" id="TimeFrameId" defaultLabel="Time Frame" />
              <Binding target="DataSource" toggleId="MyCalcTimeFrame" bindingMode="TWO_WAY" />
              <Binding target="Value" binding="ProcessContext::CalculationWizardBO.timeFrame" bindingMode="TWO_WAY" />
            </Bindings>
            <Items>
              <Bindings>
                <Binding target="ItemValue" type="Text" binding=".pKey" bindingMode="ONE_WAY" />
                <Binding target="ItemText" type="Text" binding=".text" bindingMode="ONE_WAY" />
              </Bindings>
            </Items>
          </SelectionBox>
        </GroupElement>
        <!-- Input Section -->
        <GroupElement name="InputGroup">
          <Bindings>
            <Resource target="Title" type="Label" id="InputId" defaultLabel="Input" />
          </Bindings>
          <SelectionBox name="PackageType">
            <Bindings>
              <Resource target="Label" type="Label" id="PackageTypeId" defaultLabel="Package Type" />
              <Binding target="DataSource" toggleId="MyCalcPkgType" bindingMode="TWO_WAY" />
              <Binding target="Value" binding="ProcessContext::CalculationWizardBO.packageType" bindingMode="TWO_WAY" />
            </Bindings>
            <Items>
              <Bindings>
                <Binding target="ItemValue" type="Text" binding=".pKey" bindingMode="ONE_WAY" />
                <Binding target="ItemText" type="Text" binding=".text" bindingMode="ONE_WAY" />
              </Bindings>
            </Items>
            <Events>
              <ItemSelectedEvent event="packageTypeSelected" />
            </Events>
          </SelectionBox>
          <SelectionBox name="Size">
            <Bindings>
              <Resource target="Label" type="Label" id="SizeId" defaultLabel="Size" />
              <Binding target="DataSource" binding="ProcessContext::sizeListItems" bindingMode="TWO_WAY" />
              <Binding target="Value" binding="ProcessContext::CalculationWizardBO.size" bindingMode="TWO_WAY" />
            </Bindings>
            <Items>
              <Bindings>
                <Binding target="ItemValue" type="Text" binding=".text" bindingMode="ONE_WAY" />
                <Binding target="ItemText" type="Text" binding=".text" bindingMode="ONE_WAY" />
              </Bindings>
            </Items>
          </SelectionBox>
          <SelectionBox name="BeerBrand">
            <Bindings>
              <Resource target="Label" type="Label" id="BeerBrandId" defaultLabel="Beer Brand" />
              <Binding target="DataSource" toggleId="MyCalcBeerBrand" bindingMode="TWO_WAY" />
              <Binding target="Value" binding="ProcessContext::CalculationWizardBO.beerBrand" bindingMode="TWO_WAY" />
            </Bindings>
            <Items>
              <Bindings>
                <Binding target="ItemValue" type="Text" binding=".pKey" bindingMode="ONE_WAY" />
                <Binding target="ItemText" type="Text" binding=".text" bindingMode="ONE_WAY" />
              </Bindings>
            </Items>
          </SelectionBox>
          <InputArea name="ServingSize" disabled="false">
            <Bindings>
              <Resource target="Label" type="Label" id="ServingSizeId" defaultLabel="Serving Size (oz)" />
              <Binding target="Value" binding="ProcessContext::CalculationWizardBO.servingSizeOz" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
          <InputArea name="OtherBrandName" disabled="false">
            <Bindings>
              <Resource target="Label" type="Label" id="OtherBrandNameId" defaultLabel="Other Brand Name" />
              <Binding target="Value" binding="ProcessContext::CalculationWizardBO.otherBrandName" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
          <InputArea name="PriceToConsumer" disabled="false">
            <Bindings>
              <Resource target="Label" type="Label" id="PriceToConsumerId" defaultLabel="Price To Consumer" />
              <Binding target="Value" binding="ProcessContext::CalculationWizardBO.priceToConsumer" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
          <InputArea name="PriceToRetailer" disabled="false">
            <Bindings>
              <Resource target="Label" type="Label" id="PriceToRetailerId" defaultLabel="Price To Retailer" />
              <Binding target="Value" binding="ProcessContext::CalculationWizardBO.priceToRetailer" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
          <InputArea name="KegsOrCasesPerWeek" disabled="false">
            <Bindings>
              <Resource target="Label" type="Label" id="KegsOrCasesPerWeekId" defaultLabel="Kegs/Cases per Week" />
              <Binding target="Value" binding="ProcessContext::CalculationWizardBO.kegsCasesPerWeek" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
        </GroupElement>
        <GroupElement name="StoreMultiplierGroup">
          <Bindings>
            <Resource target="Title" type="Label" id="StoreMultiplierId" defaultLabel="Store Multiplier" />
          </Bindings>
          <InputArea name="NumberOfStores" disabled="false">
            <Bindings>
              <Resource target="Label" type="Label" id="NumberOfStoresId" defaultLabel="Number of Stores" />
              <Binding target="Value" binding="ProcessContext::CalculationWizardBO.numberOfStores" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
        </GroupElement>
        <GroupElement name="OutputStatisticsGroup">
          <Bindings>
            <Resource target="Title" type="Label" id="OutputStatisticsId" defaultLabel="Output Statistics Based on Beer Serving Size / Price" />
          </Bindings>
          <InputArea name="CostPerOunce" disabled="true">
            <Bindings>
              <Resource target="Label" type="Label" id="CostPerOunceId" defaultLabel="Cost per Ounce" />
              <Binding target="Value" binding="ProcessContext::CalculationWizardBO.costPerOunce" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
          <InputArea name="NumberOfServings" disabled="true">
            <Bindings>
              <Resource target="Label" type="Label" id="NumberOfServingsId" defaultLabel="Number of Servings" />
              <Binding target="Value" type="Decimal" formatV2="10.2" binding="ProcessContext::CalculationWizardBO.numberOfServings" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
          <InputArea name="SizeInOunces" disabled="true">
            <Bindings>
              <Resource target="Label" type="Label" id="SizeInOuncesId" defaultLabel="Size in Ounces" />
              <Binding target="Value" type="Decimal" formatV2="10.2" binding="ProcessContext::CalculationWizardBO.sizeInOunce" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
          <InputArea name="CostPerServing" disabled="true">
            <Bindings>
              <Resource target="Label" type="Label" id="CostPerServingId" defaultLabel="Cost per Serving" />
              <Binding target="Value" type="Decimal" formatV2="10.2" binding="ProcessContext::CalculationWizardBO.costPerServing" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
          <InputArea name="ProfitMargin" disabled="true">
            <Bindings>
              <Resource target="Label" type="Label" id="ProfitMarginId" defaultLabel="Profit Margin" />
              <Binding target="Value" binding="ProcessContext::CalculationWizardBO.profitMargin" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
        </GroupElement>
        <GroupElement name="OutputSummaryGroup">
          <Bindings>
            <Resource target="Title" type="Label" id="OutputSummaryId" defaultLabel="Output Summary" />
          </Bindings>
          <InputArea name="RevenuePerKegOrCase" disabled="true">
            <Bindings>
              <Resource target="Label" type="Label" id="RevenuePerKegOrCaseId" defaultLabel="Revenue - Per Keg/Case" />
              <Binding target="Value" type="Decimal" formatV2="10.2" binding="ProcessContext::CalculationWizardBO.grossRevenuePerKegCase" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
          <InputArea name="ProfitPerKegOrCase" disabled="true">
            <Bindings>
              <Resource target="Label" type="Label" id="ProfitPerKegOrCaseId" defaultLabel="Profit - Per Keg/Case" />
              <Binding target="Value" type="Decimal" formatV2="10.2" binding="ProcessContext::CalculationWizardBO.netMarginPerKegCase" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
          <InputArea name="RevenuePerWeek" disabled="true">
            <Bindings>
              <Resource target="Label" type="Label" id="RevenuePerWeekId" defaultLabel="Revenue - Per Week" />
              <Binding target="Value" type="Decimal" formatV2="10.2" binding="ProcessContext::CalculationWizardBO.grossRevenuePerWeek" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
          <InputArea name="ProfitPerWeek" disabled="true">
            <Bindings>
              <Resource target="Label" type="Label" id="ProfitPerWeekId" defaultLabel="Profit - Per Week" />
              <Binding target="Value" type="Decimal" formatV2="10.2" binding="ProcessContext::CalculationWizardBO.netMarginPerWeek" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
          <InputArea name="RevenuePerYear" disabled="true">
            <Bindings>
              <Resource target="Label" type="Label" id="RevenuePerYearId" defaultLabel="Revenue - Per Year" />
              <Binding target="Value" type="Decimal" formatV2="10.2" binding="ProcessContext::CalculationWizardBO.grossRevenuePerYear" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
          <InputArea name="ProfitPerYear" disabled="true">
            <Bindings>
              <Resource target="Label" type="Label" id="ProfitPerYearId" defaultLabel="Profit - Per Year" />
              <Binding target="Value" type="Decimal" formatV2="10.2" binding="ProcessContext::CalculationWizardBO.netMarginPerYear" bindingMode="ONE_WAY" />
            </Bindings>
          </InputArea>
        </GroupElement>
      </Area>
    </Section>
  </Page>
</UIDescription>