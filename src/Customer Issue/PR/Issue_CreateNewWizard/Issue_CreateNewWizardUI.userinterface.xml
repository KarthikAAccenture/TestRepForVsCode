<UIDescription name="Issue::CreateNewWizardUI" schemaVersion="0.0.0.5"  layoutType="blank">
  <Page pagePattern="SingleSectionDialogPage" onBackDiscard="true">
    <PageHeader>
      <Bindings>
        <Resource target="title" type="Label" id="AddIssueId" defaultLabel="Add Issue" />
      </Bindings>
      <MenuItems>
        <MenuItem directlyVisible="true" itemId="NewIssueId">
          <Bindings>
            <Resource target="Text" type="Label" id="createNewIssueId" defaultLabel="Create" />
            <Resource target="Icon" type="Image" id="CheckDarkGrey24" />
          </Bindings>
          <Events>
            <ButtonPressedEvent event="CreateNewIssue" />
          </Events>
        </MenuItem>
      </MenuItems>
    </PageHeader>
    <Section sectionName="masterSection" sectionPattern="SingleAreaSection">
      <Area areaName="mainArea" areaPattern="GroupedElementsArea">
        <GroupElement name="CustomerLookup">
          <Lookup name="Customer">
            <Bindings>
              <Resource target="Label" type="Label" id="CustomerId" defaultLabel="Customer" />
              <Binding target="Value" binding="ProcessContext::ValidationBo.luCustomer.name" bindingMode="TWO_WAY" />
            </Bindings>
            <Events>
              <LookupEvent event="CustomerLookup" />
            </Events>
          </Lookup>
        </GroupElement>
        <GroupElement name="SvcRequestTemplate">
          <Lookup name="IssueType">
            <Bindings>
              <Resource target="Label" type="Label" id="IssueTypeId" defaultLabel="Issue Type" />
              <Binding target="Value" binding="ProcessContext::ValidationBo.luSvcRequestMeta.text" bindingMode="TWO_WAY" />
            </Bindings>
            <Events>
              <LookupEvent event="svcMetaLookup" />
            </Events>
          </Lookup>
        </GroupElement>
        <InputArea name="Description">
          <Bindings>
            <Resource target="Label" type="Label" id="Description" defaultLabel="Description" />
            <Binding target="Value" binding="ProcessContext::ValidationBo.text" bindingMode="TWO_WAY" />
          </Bindings>
        </InputArea>
        <GroupElement name="ProductLookup">
          <Lookup name="Product">
            <Bindings>
              <Resource target="Label" type="Label" id="ProductId" defaultLabel="Product" />
              <Binding target="Value" binding="ProcessContext::ValidationBo.luProduct.text1" bindingMode="TWO_WAY" />
            </Bindings>
            <Events>
              <LookupEvent event="productLookupEvent" />
            </Events>
          </Lookup>
          <SelectionBox name="Priority">
            <Bindings>
              <Resource target="Label" type="Label" id="PriorityId" defaultLabel="Priority" />
              <Binding target="DataSource" toggleId="ABC" bindingMode="TWO_WAY" />
              <Binding target="Value" binding="ProcessContext::ValidationBo.priority" bindingMode="TWO_WAY" />
            </Bindings>
            <Items>
              <Bindings>
                <Binding target="ItemValue" type="Text" binding=".id" bindingMode="ONE_WAY" />
                <Binding target="ItemText" type="Text" binding=".text" bindingMode="ONE_WAY" />
              </Bindings>
            </Items>
          </SelectionBox>
        </GroupElement>
        <GroupElement name="DateTime">
          <DatePickerField name="StartDate">
            <Bindings>
              <Resource target="Label" type="Label" defaultLabel="Start Date" id="StartDateId" />
              <Binding target="Value" binding="ProcessContext::ValidationBo.creationDate" bindingMode="TWO_WAY" />
            </Bindings>
          </DatePickerField>
          <DatePickerField name="DueDate">
            <Bindings>
              <Resource target="Label" type="Label" defaultLabel="End Date" id="EndDateId" />
              <Binding target="Value" binding="ProcessContext::ValidationBo.dueDate" bindingMode="TWO_WAY" />
            </Bindings>
          </DatePickerField>
        </GroupElement>
        <GroupElement name="FeatureDiscription">
          <InputArea name="FeatureDiscription">
            <Bindings>
              <Resource target="Label" type="Label" defaultLabel="Feature Description" id="FeatureDescriptionId" />
              <Binding target="Value" binding="ProcessContext::ValidationBo.featureDescription" bindingMode="TWO_WAY" />
            </Bindings>
          </InputArea>
        </GroupElement>
      </Area>
    </Section>
  </Page>
</UIDescription>